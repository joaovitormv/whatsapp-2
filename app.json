{
  "expo": {
    "name": "joaovitor",
    "slug": "joaovitor",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Permite $(PRODUCT_NAME) acessar sua c√¢mera",
          "microphonePermission": "Permite $(PRODUCT_NAME) acessar o microfone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-media-library",
        {
          "photoPermission": "Permite $(PRODUT_NAME) acessar as fotos",
          "savePhotoPermission": "Permite $(PRODUCT_NAME) salvar suas fotos",
          "isAccessMediaLocationEnabled": true 
        }
      ]
    ]
  }
}
